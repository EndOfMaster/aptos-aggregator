# Environment configuration for Aptos Aggregator Backend

# Server configuration
PORT=3000
NODE_ENV=development
LOG_LEVEL=info

# Aptos configuration
APTOS_NETWORK=testnet
APTOS_NODE_URL=https://fullnode.testnet.aptoslabs.com/v1
APTOS_FAUCET_URL=https://faucet.testnet.aptoslabs.com

# Aggregator contract address (replace with your deployed address)
AGGREGATOR_ADDRESS=0x1

# Redis configuration (optional)
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=

# Rate limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=1000

# Pool refresh configuration
POOL_REFRESH_INTERVAL_SECONDS=30

# External API configurations
CETUS_API_URL=
PANCAKE_API_URL=
LIQUIDSWAP_API_URL=

# Monitoring and observability
ENABLE_METRICS=true
METRICS_PORT=9090

# Security
API_KEY_REQUIRED=false
API_KEY=your-secret-api-key

# Database (if needed in the future)
DATABASE_URL=
